{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "ESNext",
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": true
  },
  "include": [
    "wdio.conf.ts",
    "tests/integration/**/*.ts",
    "tests/wdio.d.ts"
  ]
}