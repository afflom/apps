{
  "name": "typescript-pwa-template",
  "version": "1.0.0",
  "description": "A TypeScript PWA template with GitHub Pages deployment",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run src/simple.test.ts src/utils/dom.test.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,html}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,css,html}'",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@uor-foundation/math-js": "github:uor-foundation/math-js",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/browser": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vite-plugin-pwa": "^0.19.2",
    "vitest": "^1.3.1",
    "webdriverio": "^8.31.1"
  },
  "keywords": [
    "pwa",
    "typescript",
    "template",
    "github-pages"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  },
  "author": "",
  "license": "MIT"
}
