{
  "name": "typescript-pwa-template",
  "version": "1.0.0",
  "description": "A TypeScript PWA template with GitHub Pages deployment",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run src/simple.test.ts src/utils/dom.test.ts",
    "test:components": "vitest run src/components/*.test.ts",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,html}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,css,html}'",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "prepare": "husky",
    "deploy:dev": "node scripts/deploy-dev.js",
    "setup:devcontainer": "bash scripts/setup-devcontainer.sh",
    "claude-code": "bash scripts/ensure-claude-code.sh"
  },
  "dependencies": {
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^0.2.64",
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitest/browser": "^3.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.5",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.1.1",
    "webdriverio": "^9.12.4"
  },
  "keywords": [
    "pwa",
    "typescript",
    "template",
    "github-pages"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  },
  "author": "",
  "license": "MIT"
}
